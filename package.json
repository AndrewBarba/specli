{
	"name": "specli",
	"version": "0.0.36",
	"description": "Run any OpenAPI spec as an Agent optimized executable",
	"repository": {
		"type": "git",
		"url": "https://github.com/AndrewBarba/specli.git"
	},
	"type": "module",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./ai/tools": {
			"import": "./dist/ai/tools.js",
			"types": "./dist/ai/tools.d.ts"
		}
	},
	"bin": {
		"specli": "./bin/cli.sh"
	},
	"files": [
		"bin",
		"dist",
		"README.md",
		"package.json",
		"!**/*.test.*"
	],
	"scripts": {
		"build": "tsc",
		"prepublishOnly": "rm -rf dist && tsc",
		"lint": "biome ci",
		"lint:check": "biome check --write --unsafe",
		"lint:format": "biome format --write",
		"typecheck": "tsgo"
	},
	"dependencies": {
		"@apidevtools/swagger-parser": "^12.1.0",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"commander": "^14.0.2",
		"openapi-types": "^12.1.3",
		"yaml": "^2.8.2"
	},
	"peerDependencies": {
		"ai": "^6.0.0",
		"zod": "^4.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@tsconfig/node22": "^22.0.5",
		"@types/bun": "^1.3.6",
		"@types/node": "^22.19.7",
		"@typescript/native-preview": "^7.0.0-dev.20260122.4",
		"typescript": "^5.9.3"
	}
}
